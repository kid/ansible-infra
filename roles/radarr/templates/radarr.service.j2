[Unit]
Description=Radarr Daemon
After=syslog.target network.target
[Service]
User={{ radarr_user }}
Group={{ radarr_group }}
UMask=002
Type=simple
ExecStart=/opt/Radarr/Radarr -nobrowser -data=/var/lib/radarr/
TimeoutStopSec=20
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
